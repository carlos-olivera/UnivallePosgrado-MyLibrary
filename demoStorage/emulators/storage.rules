//
// Conceptos educativos demostrados:
// - Sintaxis b谩sica de Storage Rules
// - Permisos de lectura y escritura
// - Estructura de paths en Storage

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // **REGLA PERMISIVA PARA DEMO** 锔
    // Permite lectura y escritura a cualquier archivo
    // NUNCA usar en producci贸n
    match /{allPaths=**} {
      // Permitir lectura a cualquier usuario (incluso an贸nimos)
      allow read: if true;
      
      // Permitir escritura a cualquier usuario
      // En producci贸n: verificar autenticaci贸n y validar archivos
      allow write: if true;
    }
    
    // **EJEMPLO DE REGLAS MS SEGURAS** 
    // (comentadas para el demo, descomentar para usar)
    /*
    match /images/{imageId} {
      // Solo usuarios autenticados pueden leer
      allow read: if request.auth != null;
      
      // Solo usuarios autenticados pueden escribir
      // y solo archivos de imagen menores a 5MB
      allow write: if request.auth != null
                   && resource.contentType.matches('image/.*')
                   && resource.size < 5 * 1024 * 1024;
    }
    */
  }
}